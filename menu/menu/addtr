echo -e "\033[1;97mUser Ip          : ${iplimit} IP\033[0m"
echo -e "\033[1;97mPort             : 400-900\033[0m"
echo -e "\033[1;97mKey              : ${uuid}\033[0m"
echo -e "\033[1;97mXray Dns         : ${NS}\033[0m"
echo -e "\033[1;97mPubkey           : ${PUB}\033[0m"
echo -e "\033[1;97mPath             : /trojan-ws\033[0m"
