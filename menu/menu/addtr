curl -s -o /dev/null -X POST "https://api.telegram.org/bot$KEY/sendMessage" \
-F chat_id="$CHATID" \
-F parse_mode="HTML" \
-F text="◇━━━━━━━━━━━━━━━━━◇
      TROJAN ACCOUNT
◇━━━━━━━━━━━━━━━━━◇
Remarks   : ${user}
Domain    : ${domain}
Limit Quota : ${Quota} GB
Port TLS  : 400-900
Port NTLS : 80, 8080, 8081-9999
id        : ${uuid}
alterId   : 0
Security  : auto
network   : ws or grpc
Path      : /Multi-Path
Dynamic   : https://bugmu.com/path
Name      : trojan-grpc
◇━━━━━━━━━━━━━━━━━◇
TROJAN TLS
◇━━━━━━━━━━━━━━━━━◇
<code>${trojanlink}</code>
◇━━━━━━━━━━━━━━━━━◇
TROJAN NTLS
◇━━━━━━━━━━━━━━━━━◇
<code>${trojanlink2}</code>
◇━━━━━━━━━━━━━━━━━◇
TROJAN gRPC
◇━━━━━━━━━━━━━━━━━◇
<code>${trojanlink1}</code>
◇━━━━━━━━━━━━━━━━━◇
Info Script    : https://${domain}:81/
◇━━━━━━━━━━━━━━━━━◇
Aktif Selama   : ${masaaktif} Hari
Dibuat Pada    : ${tnggl}
Berakhir Pada  : ${expe}
◇━━━━━━━━━━━━━━━━━◇"

CHATID="$CHATID"
KEY="$KEY"
TIME="$TIME"
URL="$URL"
TEXT="<code>◇━━━━━━━━━━━━━━━━━◇
*_PEMBELIAN BERHASIL_*
◇━━━━━━━━━━━━━━━━━◇
-» PRODUK : TROJAN
-» REGION : $CITY
-» REQ CONFIG : 
-» REQ NAMA : $user
-» DEVICE : $iplimit IP
-» HARGA : 
-» AKTIF : $masaaktif HARI
-» TGL EXP : $expe
◇━━━━━━━━━━━━━━━━━◇
SABDO PALON STORE </code>"
curl -s --max-time $TIME -d "chat_id=$CHATID&disable_web_page_preview=1&text=$TEXT&parse_mode=html" $URL >/dev/null
systemctl restart xray
clear
echo -e ""
echo -e "\e[38;5;99m◇━━━━━━━━━━━━━━━━━◇\033[0m"
echo -e "\033[1;97m CREATE TROJAN ACCOUNT \033[0m"
echo -e "\e[38;5;99m◇━━━━━━━━━━━━━━━━━◇\033[0m"
echo -e "\033[1;97mRemarks          : ${user}\033[0m"
echo -e "\033[1;97mHost/IP          : ${domain}\033[0m"
