    echo -e "\e[38;5;99m◇━━━━━━━━━━━━━━━━━◇\033[0m"
    echo -e "\033[1;97m CREATE VMESS ACCOUNT \033[0m"
    echo -e "\e[38;5;99m◇━━━━━━━━━━━━━━━━━◇\033[0m"
	echo -e "\033[1;97m"
    read -rp "User: " -e user
    CLIENT_EXISTS=$(grep -w $user /etc/xray/config.json | wc -l)
	echo -e "\033[0m"
